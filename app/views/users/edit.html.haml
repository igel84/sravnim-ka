  .well.well-small
    %legend 
      Магазины и прайс-листы
      %small.pull-right= link_to 'скачать шаблон', '/price.xls'   
    .container
      .row
        .offset1.span4
          = image_tag('excel.png')
          %button#add-price.btn{onclick: "getFile();"} добавить прайс сети
