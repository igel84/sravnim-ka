            #shops 
              - if current_user.admin?
                .span6= select_tag("chain_id", options_from_collection_for_select(Chain.order('name'), 'id', 'name'), :include_blank => true, :'data-placeholder' =>  'выберите сеть', id: 'chain', class: 'select chzn-chains')
