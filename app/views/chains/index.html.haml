= form_for Chain.new do |f|
  %label новая сеть
  = f.text_field :name, placeholder: 'название'
  = f.text_field :site, placeholder: 'сайт'
  = f.file_field :logo
  = f.submit 'создать', class: 'btn'
%table.table
  - @chains.each do |chain|
    %tr
      %td= chain.name
      %td= image_tag chain.logo(:thumb)
      %td
        = link_to edit_chain_path(chain), class: 'btn btn-success btn-pop', style: 'width:20px;', title: 'редактировать' do
          %i.icon-edit.icon-white
      %td
        = link_to chain, method: 'delete', confirm: 'вы уверены?', class: 'btn btn-danger btn-pop', style: 'width:20px;', title: 'удалить сеть' do
          %i.icon-trash.icon-white